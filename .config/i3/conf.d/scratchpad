# Scratchpad
exec --no-startup-id xfce4-terminal --title ttmux -e tmux
exec --no-startup-id xfce4-terminal --title ranger-fm -e ranger  

for_window [title="ttmux"] floating enable
for_window [title="ttmux"] sticky enable
for_window [title="ttmux"] resize set 1300 800
for_window [title="ttmux"] border pixel $border_size
for_window [title="ttmux"] move scratchpad

for_window [title="ranger-fm"] floating enable
for_window [title="ranger-fm"] sticky enable
for_window [title="ranger-fm"] resize set 1300 800
for_window [title="ranger-fm"] border pixel $border_size
for_window [title="ranger-fm"] move scratchpad

# for_window [class="KeePassXC"] floating enable
# for_window [class="KeePassXC"] sticky enable
# for_window [class="KeePassXC"] resize set 1300 800
# for_window [class="KeePassXC"] border pixel $border_size
# for_window [class="KeePassXC"] move scratchpad

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Shift+plus scratchpad show

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+comma [title="ttmux"] scratchpad show; move position center
bindsym $mod+f [title="ranger-fm"] scratchpad show; move position center
# bindsym $mod+p [class="KeePassXC"] scratchpad show; move position center

bindsym $mod+Shift+Return exec --no-startup-id "xfce4-terminal --title ttmux -e tmux";  
bindsym $mod+Shift+f exec --no-startup-id "xfce4-terminal --title ranger-fm -e ranger"; 
