general {
        colors = true
        interval = 5
        color_good = "#a6e3a1"
        color_bad = "#f38ba8"
        color_degraded = "#f38ba8"
}

# order += "ipv6"
order += "volume master"
order += "cpu_usage"
order += "memory"
#order += "disk /"
#order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "load"
# order += "tztime berlin"
order += "tztime utc"
order += "tztime local"

volume master {
  format = "   %volume"
  format_muted = "  muted"
  device = "pulse"
}

cpu_usage {
        format = "   %usage"

}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " ⛁ %avail "
}

wireless _first_ {
# if you use %speed, i3status requires root privileges
        format_up = "   %ip"
        format_down = "   down"
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        # format_up = " lan: %ip %speed "
        format_up = " %ip"
        format_down = ""
}

battery all {
        format = "%status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "⚡"
        status_bat = "  "
        status_unk = "? "
        status_full = "  "
        low_threshold = 15
        threshold_type = time
        #format = "%status %percentage %remaining %emptytime"
        # status_chr = ""
        # status_bat = "bat"
        # status_bat = "☉"
        # status_bat = " "
        #status_unk = ""
        # status_full = "☻ "
}

memory {
        format = "   %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        #format = "%d/%m/%Y %H:%M:%S"
        format = " %a %d %b %Y   %H:%M"
}

tztime berlin {
        format = "berlin: %H:%M"
        timezone = "Europe/Berlin"
}

tztime utc {
        format = " %H:%M"
        timezone = "UTC"
}
